import sys,os # relative import 
sys.path.append(os.pardir) # relative import 
######################################################################
#                       Method
######################################################################
def _(siz, IND): # %d, %d # 入力がどの型か記録したほうがよい.
    row_out = (IND-1) // siz
    col_out = (IND-1) %  siz
    #-----------------------------------------------------------------
    #                       Return
    #-----------------------------------------------------------------
    return [row_out, col_out]

