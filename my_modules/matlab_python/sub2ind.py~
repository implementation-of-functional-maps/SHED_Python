import sys,os # relative import 
sys.path.append(os.pardir) # relative import 

######################################################################
#                       Method
######################################################################
def _(matSize, rowSub, colSub): # [%d, %d], %d, %d # 入力がどの型か記録したほうがよい.

    ind = matSize[0]*(rowSub+1) + matSize[1]*(colSub+1)
    #-----------------------------------------------------------------
    #                       Return
    #-----------------------------------------------------------------
    return ind

